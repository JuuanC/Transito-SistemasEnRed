
@{
    ViewData["Title"] = "Index";
    Layout = null;
}

<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Iniciar Sesión</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</head>

<body>
    <div class="row">
        <div class="col-lg-6">
            <img src="/images/logo.jpg" width="500" height="500" alt="" />
        </div>
        <div class="col-lg-6">
            <form name="forma" id="forma" action="/Perito/Validar" method="get">
                <div class="form-group">
                    <label>Usuario</label>
                    <input type="email" class="form-control" id="usuario" name="usuario" placeholder="Usuario">
                </div>
                <div class="form-group">
                    <label>Contraseña:</label>
                    <input type="password" class="form-control" id="password" name="password" placeholder="Password">
                </div>
                <div align="center">
                    <input class="btn btn-primary" type="submit" id="enviar" name="enviar"
                           value="Enviar" onclick="enviarForma(); return false;" />
                </div>
            </form>
        </div>
    </div>


    <script>
            function enviarForma() {
                if (forma_valida()) {
                    $("#forma").submit();
                } else
                    alert("Debe llenar los datos de inicio de sesión");
            }

            function forma_valida() {
                var txt_login = $("#usuario").val();
                var txt_password = $("#password").val();
                if (txt_login != "" && txt_password != "")
                    return true;
                else
                    return false;
            }
    </script>
</body>
</html>

