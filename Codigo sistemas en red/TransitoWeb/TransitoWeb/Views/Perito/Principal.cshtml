
@{
    ViewData["Title"] = "Principal";
    Layout = null;
}

@using System.Net.Sockets;

@{
    TcpClient cliente = ViewBag.Cliente;
}

<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gestión de siniestros transito</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</head>

<body>
    <div class="container-fluid">
        <div class="container">
            <div class="row">
                <div class="col">
                    <a href="/Perito/AdministrarPeritos?idSesion=@ViewBag.idSesion"><input class="btn btn-primary" type="button" value="Administrar Peritos"></a>
                    <a href="/Perito/VisualizarReportes?idSesion=@ViewBag.idSesion"><input class="btn btn-primary" type="button" value="Visualizar Reportes"></a>
                    <a href="/"><input class="btn btn-primary" type="button" value="Cerrar Sesión"></a>
                </div>
            </div>
            <div class="container">
                <div class="row">
                    <div class="col-sm">
                        <img src="/images/logo.jpg" width="225" height="255" alt="" class="rounded float-left">
                    </div>
                    <div class="col-sm">
                        <div id="cont_5dbf57f9e83b8920f144516559aac775">
                            <script type="text/javascript" async src="https://www.meteored.mx/wid_loader/5dbf57f9e83b8920f144516559aac775"></script>
                        </div>
                    </div>
                    <div class="col-sm">
                        <label for="">Usuarios Conectados...</label>
                        <div>
                            <textarea readonly=»readonly» cols="40" rows="5" id="usuarios"></textarea>
                        </div>
                        <div>
                            <textarea readonly=»readonly» cols="40" rows="10" id="mensajeria"></textarea>
                        </div>
                        <form action="/" method="post">
                            <div>
                                <input type="text" style="width:250px" name="name" value="" id="mensaje" />
                                <input type="button" class="btn btn-primary" return false;" onclick="enviar();" value="Mensaje">
                                <input type="hidden" id="socket" value="@cliente">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div>
            <div>
                <label>Usuario: @ViewBag.Perito.Usuario</label>
            </div>
            <div>
                <label>Nombre: @ViewBag.Perito.Nombre</label>
            </div>
            <div>
                <label>Cargo: @ViewBag.Perito.Cargo</label>
            </div>
        </div>
    </div>

    <script>
        function enviar() {
            var mensaje = $("#mensaje").val();
            var socketCliente = $("#socket").val();
            var nombreUsuario = '@ViewBag.Perito.Usuario';
                $.ajax({
                    url: "/Perito/Enviar",
                    data: {
                        "mensaje": mensaje,
                        "socket": socketCliente,
                        "nombreUsuario": nombreUsuario,
                    },
                    type: 'POST'
                });
            /*var mensaje = $("#mensaje").val();
            $("#mensajeria").val($("#mensajeria").val() + "\n" + perito + ": " + mensaje);
            $("#mensaje").val("");*/
        }
    </script>
</body>
</html>

